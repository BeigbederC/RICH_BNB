


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://static.pulselive.co.ke/img/incoming/origs7107683/6160489386-w980-h640/luxury-home-41.jpg');">

  <div class="reservation-form">
  <h2>New reservation</h2>
    <%= simple_form_for [@house, @reservation] do |f| %>
      <h5><%= f.input :guests_number, placeholder: "Number of guest" %></h5>
      <h5><%= f.input :start_booked_at, placeholder: "Booking date", html5: true %></h5>
      <h5><%= f.input :end_booked_at, placeholder: "Leaving date", html5: true %></h5>
      <%= f.button :submit, class: "form-btn btn-block" %>
    <% end %>
    </div>

</div>
