<div class="row">
  <div class="show-header" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.2) 50%), url('<%= @house.house_picture %>');">
    <div class="col-md-8">
      <div class="header-content">
        <h3><%= @house.name %></h3>
        <%= link_to "BOOK NOW", new_house_reservation_path(@house), class: "btn btn-success btn-lg" %>
      </div>
    </div>



    <div class="col-md-4">
      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=400x300&sensor=false&maptype=roadmap&markers=color:red|#{@house.address}" %>
    </div>
  </div>
</div>





<div class="row">
<!--  -->
   <%= link_to "This house belongs to you - You can click here to delete it" , @house.destroy , class: "house-btn btn--block card__btn text-center" %>

  <div class="show-section">
    <div class="section-title">DESCRIPTION |</div>
    <div class="section-content"><%= "#{@house.description}" %></div>
  </div>

  <div class="show-section2">
    <div class="section-title">ADDRESS |</div>
    <div class="section-content"><%= "#{@house.address}" %></div>
  </div>

  <div class="show-section3">
    <div class="section-title">PRICE |</div>
    <div class="section-content"><%= "#{@house.price_per_night}$/per night" %></div>
  </div>
</div>








