<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://modernaatl.com/images/nice-salle-a-manger-versailles-3-champ-de-bataille-le-mini-versailles-de-leure-d233tours-900x600.jpg');">

  <div class="reservation-form">
      <%= simple_form_for(@house) do |f| %>
      <h2>Add a House</h2>
        <h5><%= f.input :name, placeholder: "your house's name" %></h5>
        <h5><%= f.input :address, placeholder: "your house's adress" %></h5>
        <h5><%= f.input :description, placeholder: "describe your house" %></h5>
        <h5><%= f.input :price_per_night, as: :integer, placeholder: "the price per night in $" %></h5>
        <h5>
          <%= f.input :house_picture, as: :string, placeholder: "copy your JPG image URL here" %>
        </h5>
        <h5>
          <%= f.input :availability, as: :boolean, checked_value: true, unchecked_value: false %>
        </h5>

        <%= f.button :submit, class: "form-btn btn-block" %>
      <% end %>
    </div>

</div>
